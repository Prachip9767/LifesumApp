<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.PlanFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cocordinate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/curve_toolbar_bg"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:toolbarId="@+id/collapsingToolbar">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curve_toolbar_bg"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorEnabled="false"
                    app:sliderIndicatorMarginBottom="12dp"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:text="Mean Plans"
                android:textSize="20sp"
                android:textColor="#3e3e3e"
                android:textAllCaps="true"
                android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:text="Pre-Planned recipes and meal panning"
                    android:textSize="11sp"
                    android:textColor="#7b7b7b"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:background="#f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/tvBreakfast">

                <LinearLayout
                    android:padding="10dp"
                    android:background="#f0f0f0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        style="@style/CardView"
                        android:background="#f0f0f0"
                        android:layout_width="305dp"
                        android:layout_height="202dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            style="@style/CardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/square"
                            android:scaleType="centerCrop"
                            android:src="@drawable/f" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        style="@style/CardView"
                        android:background="#f0f0f0"
                        android:layout_width="305dp"
                        android:layout_height="202dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            style="@style/CardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/square"
                            android:scaleType="centerCrop"
                            android:src="@drawable/c" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        style="@style/CardView"
                        android:background="#f0f0f0"
                        android:layout_width="305dp"
                        android:layout_height="202dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            style="@style/CardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/square"
                            android:scaleType="centerCrop"
                            android:src="@drawable/d" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardView"
                        android:background="#f0f0f0"
                        android:layout_width="305dp"
                        android:layout_height="202dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            style="@style/CardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/square"
                            android:scaleType="centerCrop"
                            android:src="@drawable/k" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:text="Balanced diets"
                    android:textSize="20sp"
                    android:textColor="#3e3e3e"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:text="Simple recipes with rating and tracking"
                    android:textSize="11sp"
                    android:textColor="#7b7b7b"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <HorizontalScrollView
                    android:background="#f0f0f0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/tvBreakfast">

                    <LinearLayout
                        android:padding="10dp"
                        android:background="#f0f0f0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/g" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/l" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/i" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/j" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:text="Keto-Diets and fasting diets"
                    android:textSize="20sp"
                    android:textColor="#3e3e3e"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:text="Simle recipes with rating and tracking"
                    android:textSize="11sp"
                    android:textColor="#7b7b7b"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <HorizontalScrollView
                    android:background="#f0f0f0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/tvBreakfast">

                    <LinearLayout
                        android:padding="10dp"
                        android:background="#f0f0f0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/b" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/d" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">

                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/f" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            style="@style/CardView"
                            android:background="#f0f0f0"
                            android:layout_width="305dp"
                            android:layout_height="202dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="30dp">
                            <ImageView
                                style="@style/CardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/square"
                                android:scaleType="centerCrop"
                                android:src="@drawable/a" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>